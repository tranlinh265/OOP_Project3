<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eraseImageButton"
        android:src="@drawable/thungrac_icon"
        android:background="@color/white_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="OnClick"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:id="@+id/textView"
        android:layout_below="@+id/eraseImageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/eraseImageButton"
        android:layout_alignEnd="@+id/eraseImageButton"
        android:background="@color/red_color"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"

        android:src="@drawable/tukhoa_icon"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/image_top_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ Khóa"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_marginTop="@dimen/text_top_margin"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black_color"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/silver_color"
        android:id="@+id/textView3"
        android:layout_marginTop="@dimen/text_top_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_top_margin"
        android:id="@+id/imageView2"
        android:src="@drawable/danhmuc_icon"

        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_top_margin"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black_color"
        android:text="Danh Mục"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/text_top_margin"
        android:background="@color/silver_color"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/nhanhieu_icon"
        android:layout_marginTop="@dimen/image_top_margin"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhãn Hiệu"
        android:textStyle="bold"
        android:textColor="@color/black_color"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="@dimen/text_top_margin"
        android:textSize="@dimen/text_size"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/silver_color"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/text_top_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/kichco_icon"
        android:layout_marginTop="@dimen/image_top_margin"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kích Cỡ"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:textColor="@color/black_color"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="@dimen/text_top_margin"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/silver_color"
        android:id="@+id/textView9"
        android:layout_marginTop="@dimen/text_top_margin"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gia_icon"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="@dimen/image_top_margin"
        android:id="@+id/imageView5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="@dimen/text_top_margin"
        android:text="Giá"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:id="@+id/textView12" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/silver_color"
        android:id="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/text_top_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"

        android:src="@drawable/trangthai_icon"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/image_top_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng Thái"
        android:layout_below="@id/textView10"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:id="@+id/textView11"

        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"

        android:layout_marginTop="@dimen/text_top_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/silver_color"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/text_top_margin"
        android:layout_alignRight="@+id/eraseImageButton"
        android:layout_alignEnd="@+id/eraseImageButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm Kiếm"
        android:textStyle="bold"
        android:textColor="@color/white_color"
        android:background="@drawable/round_button"
        android:id="@+id/searchBtn"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="23dp"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_toLeftOf="@+id/eraseImageButton"
        android:layout_toStartOf="@+id/eraseImageButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu kết quả"
        android:textStyle="bold"
        android:textColor="@color/white_color"
        android:background="@drawable/round_button"
        android:id="@+id/saveBtn"
        android:layout_below="@+id/searchBtn"
        android:layout_alignRight="@+id/searchBtn"
        android:layout_alignEnd="@+id/searchBtn"
        android:layout_marginTop="27dp"
        android:layout_alignLeft="@+id/searchBtn"
        android:layout_alignStart="@+id/searchBtn" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Hướng Dẫn"
        android:textAllCaps="false"
        android:textColor="@color/pink_color"
        android:textSize="10dp"
        android:background="@drawable/round_button2"
        android:id="@+id/guideBtn"
        android:layout_below="@id/saveBtn"
        android:layout_marginTop="15dp"
        android:onClick="OnClick"
        android:layout_alignRight="@+id/saveBtn"
        android:layout_alignEnd="@+id/saveBtn" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/guideBtn"
        android:layout_alignStart="@+id/guideBtn"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:id="@+id/keyWordText"
            android:text=""
            android:textColor="@color/red_color"
            android:singleLine="true"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tất cả"
        android:drawableRight="@drawable/next_icon"
        android:textColor="@color/pink_color"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:background="@color/white_color"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignTop="@+id/imageView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tất cả"
        android:drawableRight="@drawable/next_icon"
        android:textColor="@color/pink_color"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:background="@color/white_color"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tất cả"
        android:drawableRight="@drawable/next_icon"
        android:textColor="@color/pink_color"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:background="@color/white_color"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignBottom="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tất Cả"
        android:drawableRight="@drawable/next_icon"
        android:textColor="@color/pink_color"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:background="@color/white_color"
        android:id="@+id/statusBtn"
        android:onClick="OnClick"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignBottom="@+id/imageView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text=""
        android:drawableRight="@drawable/icon"
        android:paddingRight="2dp"
        android:background="@drawable/edit_text1"
        android:singleLine="true"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignBottom="@+id/imageView5" />


</RelativeLayout>
